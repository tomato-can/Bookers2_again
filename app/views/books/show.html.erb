<div class="container">
	<% if flash[:notice] %>
		<div style="color: limegreen;">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<% if flash[:alert] %>
		<div style="color: limegreen;">
			<%= flash[:alert] %>
		</div>
	<% end %>
	<div class="row">
		<div class="col-md-3">
			<%= render 'users/profile', user: @book.user, book:@book_new %>
		</div>
		<div class="col-md-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",size: 40 %><br>
							<%= link_to user_path(@book.user.id) do %>
							<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<% if @book.user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book.id) %></td>
						<td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>