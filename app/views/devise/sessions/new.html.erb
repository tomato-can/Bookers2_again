<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "on", id:"inputName" %>
    </div>

    <div class="field">
      <label for="inputPassword">Password</label><br>
      <%= f.password_field :password, autocomplete: "off", id:"inputPassword" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit "Log in", class: "btn btn-primary text-center" %>
    </div>
  <% end %>

  <%= link_to "Sign up", new_user_registration_path %>
</div>