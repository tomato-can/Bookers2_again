<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "on", id:"inputName" %>
    </div>

    <div>
      <label for="inputEmail">Email</label><br>
      <%= f.email_field :email, id:"inputEmail" %>
    </div>

    <div>
      <label for="inputPassword">Password</label>
      <% if @minimum_password_length %>
      <span>(<%= @minimum_password_length %> characters minimum)</span>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "off", id:"inputPassword" %>
    </div>

    <div>
      <label for="inputConfirmPassword">Password Confirmation</label><br>
      <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputConfirmPassword" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "btn btn-success text-center"%>
    </div>
  <% end %>

  <%= link_to "Log in", new_user_session_path %>
</div>
